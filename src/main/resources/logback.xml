<configuration scan="true" scanPeriod="1000">
    <appender name="A1" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5p %d{yy-MM-dd HH:mm:ss}] %logger{15} |#||:%m%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="A1"/>
    </root>
</configuration>